<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_plantilla_servicios_rep_tree" model="ir.ui.view">
        <field name="name">bitacora.servicio.linea.tree</field>
        <field name="model">bitacora.servicio.linea</field>

        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="completado" />
                <field name="incidencia" />
                <field name="comentarios" />
                <field name="imagen" />                 
            </tree>
        </field>
    </record>

    <record id="view_bitacora_servicio_rep_form" model="ir.ui.view">
        <field name="name">bitacora.servicio.linea.form</field>
        <field name="model">bitacora.servicio.linea</field>

        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
            
                <group>           
                    <field name="name" />
                    <field name="completado" />
                    <field name="incidencia" />
                    <field name="comentarios" />
                    <field name="imagen" />
                    <field name="seccion" />

                </group>
              
            </form>
        </field>
    </record>

</odoo>